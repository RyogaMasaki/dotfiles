[cfg]
left_monitor = DVI-D-0
right_monitor = HDMI-0

[bar/bar]
width = 100%
height = 32
background = #d0
foreground = #23898d
line-size = 3
line-color = #be444b

font-0 = Source\ Code\ Pro:size=14
#font-1 = Source\ Han\ Sans\ JP:style=Regular:size=14
font-1 = Kinto\ Sans:style=Regular:size=14
font-2 = Font\ Awesome\ 5\ Free:style=Solid:size=14
font-3 = Font\ Awesome\ 5\ Free:style=Regular:size=14

padding-left = 0
padding-right = 1
module-margin-left = 1
module-margin-right = 1

border-size = 0
modules-left = i3 xwindow

[bar/left]
inherit = bar/bar
monitor = ${cfg.left_monitor}

modules-right = date 

[bar/right]
inherit = bar/bar
monitor = ${cfg.right_monitor}
modules-right = mpd

tray-position = right
tray-padding-right = 10
tray-maxsize = 28
tray-scale = 1
tray-offset-x = -5

[module/xwindow]
type = internal/xwindow
format =  <label>
label = %title:0:60:…%
label-empty =   
format-foreground = #acacac

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
pin-workspaces = true
#index-sort = true
strip-wsnumbers = true
wrapping-scroll = false
enable-click = true

label-mode-padding = 1
 
; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-foreground = #289da2
label-focused-underline = #289da2
label-focused-padding = ${self.label-mode-padding}
 
; unfocused = Inactive workspace on any monitor
label-unfocused = ${self.label-focused}
label-unfocused-padding = ${self.label-mode-padding}

; visible = Active workspace on unfocused monitor
label-visible = ${self.label-focused}
label-visible-underline = #1c6466
label-visible-padding = ${self.label-mode-padding}
 
; urgent = Workspace with urgency hint set
label-urgent = ${self.label-focused}
label-urgent-underline = #be444b
label-urgent-padding = ${self.label-mode-padding}
 
[module/mpd]
type = internal/mpd

host = 127.0.0.1
port = 6600

; Seconds to sleep between progressbar/song timer sync
; Default: 1
interval = 1
label-song =  %artist% - %title% (%date:0:4:%)
format-online = <label-song> 

[module/date]
type = internal/date
interval = 1
 
date = 
date-alt = "%Y.%m.%d"
time = "%H:%M"
time-alt = " %H:%M:%S"

format-prefix = " "
;format-prefix-foreground = ${colors.green}
;format-underline = ${colors.blue}
 
label = %date%%time%
;click-right = zenity --calendar

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 0
margin-bottom = 3

