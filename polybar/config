[cfg]
left_monitor = HDMI-0
right_monitor = DVI-D-0

[bar/bar]
width = 100%
height = 32
background = ${xrdb:background}
foreground = ${xrdb:foreground}
line-size = 3
line-color = ${xrdb:color1}

font-0 = Source\ Code\ Pro:size=14;3
font-1 = Source\ Han\ Sans\ JP\ Regular:size=14;3
font-2 = fontawesome-webfont.ttf:size=14;3

padding-left = 0
padding-right = 2
module-margin-left = 1
module-margin-right = 1

border-size = 0

;wm-restack = 13
;override-redirect = true

;dim-value = 0.4
modules-left = i3

[bar/left]
inherit = bar/bar
monitor = ${cfg.left_monitor}

tray-position = right
tray-padding-right = 10
tray-maxsize = 20

modules-right = wireless-network date
modules-center = xwindow

[bar/right]
inherit = bar/bar
monitor = ${cfg.right_monitor}

modules-center = mpd
modules-right = volume

[module/xwindow]
type = internal/xwindow
label = %title:0:70:…%

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
pin-workspaces = true
index-sort = true
wrapping-scroll = false
enable-click = true


label-mode-padding = 1
label-mode-foreground = #000
label-mode-background = ${xrdb:color11}
 
; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${xrdb:color0}
label-focused-underline = ${xrdb:color4}
label-focused-padding = ${self.label-mode-padding}
 
; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = ${self.label-mode-padding}

; visible = Active workspace on unfocused monitor
label-visible = %name%
;label-visible-background = ${self.label-focused-background}
;label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-mode-padding}
 
; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-underline = ${xrdb:color1}
;label-urgent-background = ${module/bspwm.label-urgent-background}
label-urgent-padding = ${self.label-mode-padding}
 
; icons
ws-icon-default = 
;ws-icon-0 = 1;
;ws-icon-1 = 2;
;ws-icon-2 = 3;
;ws-icon-3 = 6;

[module/title]
type = internal/xwindow
label = %title::36…%
label-maxlen = 36
;label-underline = ${colors.cyan}

[module/network]
type = internal/network
interval = 5



[module/wired-network]
type = internal/network
interface = enp10s0u1u2
; Seconds to sleep between updates
; Default: 1
interval = 5

; Test connectivity every Nth update
; A value of 0 disables the feature
; NOTE: Experimental (needs more testing)
; Default: 0
;ping-interval = 3

; @deprecated: Define min width using token specifiers (%downspeed:min% and %upspeed:min%)
; Minimum output width of upload/download rate
; Default: 3
udspeed-minwidth = 5

; Accumulate values from all interfaces
; when querying for up/downspeed rate
; Default: false
accumulate-stats = true

format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.green}
label-connected = %local_ip%
 
format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.green}

[module/wireless-network]
inherit = module/network
interface = wlp3s0

interval = 5

format-connected = <label-connected>
format-disconnected = <label-disconnected>

label-connected =  %essid%
label-disconnected =  ⋯
label-disconnected-foreground = ${xrdb:color1}

[module/mpd]
type = internal/mpd

host = 127.0.0.1
port = 6600

; Seconds to sleep between progressbar/song timer sync
; Default: 1
interval = 2

[module/volume]
type = internal/volume
 
format-volume = <label-volume> <bar-volume>
label-volume = 
label-muted = " ⋯⋯⋯⋯⋯"
 
bar-volume-width = 5
bar-volume-foreground-0 = ${xrdb:color4}
bar-volume-gradient = false
bar-volume-indicator =  
bar-volume-indicator-font = 0
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${xrdb:color15}

[module/date]
type = internal/date
interval = 1
 
date = ""
date-alt = "%Y.%m.%d"
time = "%H:%M"
time-alt = " %H:%M:%S"

format-prefix = " "
;format-prefix-foreground = ${colors.green}
;format-underline = ${colors.blue}
 
label = %date%%time%

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 0
margin-bottom = 3

