[cfg]
left_monitor = HDMI-0
right_monitor = DVI-D-0

[bar/bar]
width = 100%
height = 32
background = #d0
foreground = #23898d
line-size = 3
line-color = ${xrdb:color1}

font-0 = Source\ Code\ Pro:size=14;3
font-1 = Source\ Han\ Sans\ JP\ Regular:size=14;3
font-2 = fontawesome-webfont.ttf:size=14;3

padding-left = 0
padding-right = 1
module-margin-left = 1
module-margin-right = 1

border-size = 0

modules-left = i3 xwindow

[bar/left]
inherit = bar/bar
monitor = ${cfg.left_monitor}

modules-right = volume date 

[bar/right]
inherit = bar/bar
monitor = ${cfg.right_monitor}

tray-position = right
tray-padding-right = 10
tray-maxsize = 28
tray-scale = 1
tray-offset-x = -5

[module/xwindow]
type = internal/xwindow
label =  %title:0:60:…%
format-foreground = ${xrdb:color7}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
pin-workspaces = true
#index-sort = true
strip-wsnumbers = true
wrapping-scroll = false
enable-click = true

label-mode-padding = 1
 
; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-foreground = ${xrdb:color14}
label-focused-underline = ${xrdb:color14}
label-focused-padding = ${self.label-mode-padding}
 
; unfocused = Inactive workspace on any monitor
label-unfocused = ${self.label-focused}
label-unfocused-padding = ${self.label-mode-padding}

; visible = Active workspace on unfocused monitor
label-visible = ${self.label-focused}
label-visible-underline = ${xrdb:color6}
label-visible-padding = ${self.label-mode-padding}
 
; urgent = Workspace with urgency hint set
label-urgent = ${self.label-focused}
label-urgent-underline = ${xrdb:color1}
label-urgent-padding = ${self.label-mode-padding}
 
[module/mpd]
type = internal/mpd

host = 127.0.0.1
port = 6600

; Seconds to sleep between progressbar/song timer sync
; Default: 1
interval = 2

[module/volume]
type = internal/volume
 
format-volume = <label-volume> <bar-volume>
label-volume = 
label-muted = " ⋯⋯⋯⋯⋯"
 
bar-volume-width = 5
bar-volume-foreground-0 = ${xrdb:color6}
bar-volume-gradient = false
bar-volume-indicator =  
bar-volume-indicator-font = 0
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${xrdb:color0}

[module/date]
type = internal/date
interval = 1
 
date = ""
date-alt = "%Y.%m.%d"
time = "%H:%M"
time-alt = " %H:%M:%S"

format-prefix = " "
;format-prefix-foreground = ${colors.green}
;format-underline = ${colors.blue}
 
label = %date%%time%
click-right = zenity --calendar

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 0
margin-bottom = 3

